{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "TPJ": {
    "Backup": {
      "Store": {
        "FileSystem": {
          "BackupDirectory": "D:\\Test\\Backup"
        },
        "AzureBlobStorage": {
          "ConnectionString": "TODO"
        }
      },
      "Configuration": {
        "Backup": {
          "Folders": [
            {
              "ContainerName": "sql-bak",
              "FolderPath": "D:\\Test\\Backup",
              "FileExtension": "bak",
              "RemoveOnDelete": false,
              "CompressFiles": false
            },
            {
              "ContainerName": "sql-trn",
              "FolderPath": "D:\\Test\\Transaction Logs",
              "FileExtension": "trn",
              "RemoveOnDelete": false,
              "CompressFiles": false
            }
          ]
        },
        "FileSystem": {
          "Retention": {
            "Folders": [
              {
                "ContainerName": "sql-bak",
                "FileExtension": "bak",
                "RetentionDays": 3
              },
              {
                "ContainerName": "sql-trn",
                "FileExtension": "trn",
                "RetentionDays": 3
              }
            ]
          },
          "Restore": {
            "Folders": [
              {
                "Backup": {
                  "ContainerName": "sql-bak",
                  "RestorePath": "D:\\Test\\Restore\\Backup",
                  "FilterRelativePath": null,
                  "FilterFileExtension": null,
                  "FilterFileName": null
                },
                "TransactionLog": {
                  "ContainerName": "sql-trn",
                  "RestorePath": "D:\\Test\\Restore\\TransactionLogs",
                  "FilterRelativePath": null,
                  "FilterFileExtension": null,
                  "FilterFileName": null
                }
              }
            ]
          }
        },
        "AzureBlobStorage": {
          "Retention": {
            "Folders": [
              {
                "ContainerName": "sql-bak",
                "FileExtension": "bak",
                "RetentionDays": 3
              },
              {
                "ContainerName": "sql-trn",
                "FileExtension": "trn",
                "RetentionDays": 3
              }
            ]
          },
          "Restore": {
            "MSSQL": {
              "Folders": [
                {
                  "RestoreType": "Latest", // All or Latest
                  "Backup": {
                    "ContainerName": "sql-bak",
                    "RestorePath": "D:\\Test\\Restore\\Backup"
                  },
                  "TransactionLog": {
                    "ContainerName": "sql-trn",
                    "RestorePath": "D:\\Test\\Restore\\TransactionLogs"
                  }
                }
              ]
            },
            "Basic": {
              "Folders": [
                {
                  "Backup": {
                    "ContainerName": "sql-bak",
                    "RestorePath": "D:\\Test\\Restore\\Backup",
                    "FilterRelativePath": null,
                    "FilterFileExtension": null,
                    "FilterFileName": null
                  },
                  "TransactionLog": {
                    "ContainerName": "sql-trn",
                    "RestorePath": "D:\\Test\\Restore\\TransactionLogs",
                    "FilterRelativePath": null,
                    "FilterFileExtension": null,
                    "FilterFileName": null
                  }
                }
              ]
            }
          }
        }
      }
    }
  }
}
